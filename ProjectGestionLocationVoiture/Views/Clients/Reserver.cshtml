@model ProjectGestionLocationVoiture.Models.Voiture

@{
    ViewBag.Title = "Reserver";
}





<div class="card">
    <div class="row">
        <div class="col-md-7 px-3">
            <div class="card-block px-6">
                <h4 class="card-title text-modified text-colored">@Html.DisplayFor(modelItem => modelItem.Modele.Marque) @Html.DisplayFor(modelItem => modelItem.Modele.Serie)</h4>
                <p class="card-text">
                    <i class="fas fa-calendar"></i> Date Depart : @ViewBag.dateDebut.ToString("dddd, dd MMMM yyyy")
                </p>
                <p class="card-text">
                    <i class="fas fa-calendar"></i> Date Retour : @ViewBag.dateFin.ToString("dddd, dd MMMM yyyy")
                </p>
                <p class="card-text">
                    <i class="fas fa-calendar"></i> Prix Journalier : @Html.DisplayFor(modelItem => modelItem.Prixournalier) DH / Jour
                </p>
                <p class="card-text">
                    <i class="fas fa-calendar-check"></i> @ViewBag.jours Jour(s)
                </p>
                <h4 class="text-modified">Totale : @ViewBag.Total Dh TTC</h4>
                @if (Session["CurrentUser"] == null)
                {
                    @Html.ActionLink("Validez Votre Reservation", "Login", "Auth", null, new { @class = "btn btn-outline-danger text-modified" })
                }
                else
                {
                    @Html.ActionLink("Validez Votre Reservation", "ConfirmerResevation", "Clients", new { idClient = Session["CurrentUser"], Voiture = Model.VID, datedebut = ViewBag.dateDebut, datefin = ViewBag.dateFin }, new { @class = "btn btn-outline-danger text-modified" })
                }
            </div>
        </div>
        <!-- Carousel start -->
        <div class="col-md-5">
            <div id="CarouselTest" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#CarouselTest" data-slide-to="0" class="active"></li>
                    <li data-target="#CarouselTest" data-slide-to="1"></li>

                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 img-detail" src="@Url.Content(@ViewData["img1"].ToString())" alt="1">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 img-detail" src="@Url.Content(@ViewData["img2"].ToString())" alt="2">
                    </div>

                    <a class="carousel-control-prev" href="#CarouselTest" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#CarouselTest" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card card1 mt-5 p-4 text-white">
    <p class="top mb-1">Payez Moins</p>
    <div class="d-flex flex-row justify-content-between text-align-center xyz">
        <h2></i><span></span></h2>
        <div class="discount"><span>60% OFF</span></div>
    </div>
    <div class="card-content mt-4">
        <p class="desc text-modified">
            Si vous prenez une voiture pour une longue duré vous aurez un reduction de 60% sur le prix journalier
        </p>
    </div>
    <div class="mt-2"> <button class="btn btn-block btn-lg btn-primary"><i class="fas fa-arrow-left"></i> <span>Modifier Date</span></button> </div>
</div>


<style>

    .card-block {
        margin: 0;
        padding: 1em;
        border: none;
        box-shadow: none;
    }

    .card {
        font-size: 1em;
        overflow: hidden;
        padding: 2px;
        border: none;
        border-radius: 15px;
        box-shadow: 0 1px 3px 0 #d4d4d5, 0 0 0 1px #d4d4d5;
        margin-top: 20px;
        box-shadow: 0px 6px 18px rgba(0, 0, 0, 0.2);
    }

    .carousel-indicators li {
        border-radius: 12px;
        width: 12px;
        height: 12px;
        background-color: #404040;
    }

    .carousel-indicators li {
        border-radius: 12px;
        width: 12px;
        height: 12px;
        background-color: #404040;
    }

    .carousel-indicators .active {
        background-color: white;
        max-width: 12px;
        margin: 0 3px;
        height: 12px;
    }




    

</style>



