@model ProjectGestionLocationVoiture.Models.Reservation

@{
    ViewBag.Title = "DetailsReservation";
}

<div class="p-1 box">

    <div class="row mt-4">
        <div class="col-12">
            <div class="card p-2 border-0">
                <h4 class="card-title text-modified">Informations sur Réservation</h4>
                <div class="card p-4 border-0">
                    <div class="row">
                        <div class="col-md-7 px-3">
                            <div class="card-block px-6">
                                <p class="card-text">
                                    <i class="fas fa-calendar"></i> Date Depart : @ViewBag.dateDebut.ToString("dddd, dd MMMM yyyy")
                                </p>
                                <p class="card-text">
                                    <i class="fas fa-calendar"></i> Date Retour : @ViewBag.dateFin.ToString("dddd, dd MMMM yyyy")
                                </p>
                                <p class="card-text">
                                    <i class="fas fa-calendar"></i> Prix Journalier : @Html.DisplayFor(model => model.Voiture.Prixournalier) DH / Jour
                                </p>
                                <p class="card-text">
                                    <i class="fas fa-calendar-check"></i> @ViewBag.jours Jour(s)
                                </p>
                                <h4 class="text-modified">Totale : @ViewBag.Total Dh TTC</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 mt-2">
            <div class="card p-4 border-0">
                <h4 class="card-title text-modified">Carte d'identité Nationale </h4>
                <img id="myImg1" src="@Url.Content(Model.Client.Cin)" alt="@Html.DisplayFor(model => model.Client.Nom)" width="300" height="200">
                <div id="myModal1" class="modal">
                    <span class="close">&times;</span>
                    <img class="modal-content" id="img01">
                    <div id="caption1"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 mt-2">
            <div class="card p-4 border-0">
                <h4 class="card-title text-modified ">Permis de Conduire </h4>
                <img id="myImg2" src="@Url.Content(Model.Client.PermisConduire)" alt="@Html.DisplayFor(model => model.Client.Nom)" width="300" height="200">

                <div id="myModal2" class="modal">
                    <span class="close">&times;</span>
                    <img class="modal-content" id="img02">
                    <div id="caption2"></div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 mt-2">
            <div class="card p-4 border-0">
                <h4 class="card-title Animated-title text-modified"> @Html.DisplayFor(model => model.Client.Nom)</h4>
                <p class="card-text"><i class="fas fa-phone"></i> @Html.DisplayFor(model => model.Client.Telephone)</p>
                <p class="card-text"><i class="fas fa-calendar"></i> @Html.DisplayFor(model => model.Client.DateNaissance)</p>
                <p class="card-text"><i class="fas fa-at"></i> @Html.DisplayFor(model => model.Client.AdresseMail)</p>
            </div>
        </div>
        <div class="col-md-6 col-sm-12 mt-2">
            <div class="card p-4 border-0">
                <h4 class="card-title text-modified"> @Html.DisplayFor(model => model.Voiture.Modele.Marque) @Html.DisplayFor(model => model.Voiture.Modele.Serie)</h4>
                <p class="card-text"><i class="fas fa-gas-pump"></i> @Html.DisplayFor(model => model.Voiture.Carburant)</p>
                <p class="card-text"><i class="fas fa-car"></i> @Html.DisplayFor(model => model.Voiture.Categorie)</p>
                <p class="card-text"><i class="fas fa-tags"></i> @Html.DisplayFor(model => model.Voiture.Immatriculation)</p>
                <p class="card-text">
                    <i class="fas fa-euro-sign"></i> Prix Journalier : @Html.DisplayFor(model => model.Voiture.Prixournalier) DH / Jour
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    // Get the modal
    var modal1 = document.getElementById('myModal1');

    // Get the image and insert it inside the modal - use its "alt" text as a caption
    var img1 = document.getElementById('myImg1');
    var modalImg1 = document.getElementById("img01");
    var captionText1 = document.getElementById("caption1");
    img1.onclick = function () {
        modal1.style.display = "block";
        modalImg1.src = this.src;
        captionText1.innerHTML = this.alt;
    }

    // Get the <span> element that closes the modal
    var span1 = document.getElementsByClassName("close")[0];

    // When the user clicks on <span> (x), close the modal
    span1.onclick = function () {
        modal1.style.display = "none";
    }



    var modal2 = document.getElementById('myModal2');

    // Get the image and insert it inside the modal - use its "alt" text as a caption
    var img2 = document.getElementById('myImg2');
    var modalImg2 = document.getElementById("img02");
    var captionText2 = document.getElementById("caption2");
    img2.onclick = function () {
        modal2.style.display = "block";
        modalImg2.src = this.src;
        captionText2.innerHTML = this.alt;
    }

    // Get the <span> element that closes the modal
    span1 = document.getElementsByClassName("close")[1];

    // When the user clicks on <span> (x), close the modal
    span1.onclick = function () {
        modal2.style.display = "none";
    }
</script>
