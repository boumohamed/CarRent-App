@model ProjectGestionLocationVoiture.Models.Admin

@{
    ViewBag.Title = "ModifierAdmin";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row d-flex justify-content-center box align-items-center mt-5">
    <div class="col-lg-12 col-xl-11">
                <div class="row justify-content-center">
                    <div class="col">
                        <p class="text-center h1 fw-bold mb-5 title text-modified text-colored"><span class="primary-color">Vintage </span><span class="secondary-color">Car</span></p>
                        <div class="form-horizontal mx-1 mx-md-4">
                            @Html.HiddenFor(model => model.UID)
                            <div class="form-group">
                                @Html.LabelFor(model => model.TypeUser, htmlAttributes: new { @class = "control-label col-md-2 text-modified" })
                                <div class="col-12">
                                    @Html.EditorFor(model => model.TypeUser, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                    @Html.ValidationMessageFor(model => model.TypeUser, "", new { @class = "text-danger text-modified" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.AdresseMail, htmlAttributes: new { @class = "control-label col-md-2 text-modified" })
                                <div class="col-12">
                                    @Html.EditorFor(model => model.AdresseMail, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                    @Html.ValidationMessageFor(model => model.AdresseMail, "", new { @class = "text-danger text-modified" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.MotDePasse, htmlAttributes: new { @class = "control-label col-md-2 text-modified" })
                                <div class="col-12">
                                    @Html.EditorFor(model => model.MotDePasse, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.MotDePasse, "", new { @class = "text-danger text-modified" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-12">
                                    <button type="submit" class="btn btn-outline-danger text-modified">Modifier <i class="fas fa-pen"></i> </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
</div>
    }


    <div>
        <a href="@Url.Action("Admins", "Admins")" class="btn btn-outline-danger text-modified mt-4"> <i class="fas fa-arrow-circle-left"></i> Liste des Admins </a>
    </div>
