@model ProjectGestionLocationVoiture.Models.Modele

@{
    ViewBag.Title = "CreateModele";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row d-flex justify-content-center mt-5 mb-5 box align-items-center h-100">
    <div class="col">
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-6 col-xl-5 order-1 order-lg-1">
                <p class="text-center h1 fw-bold mb-2 mx-1 mx-md-4 mt-4 title text-colored text-modified"><span class="primary-color">Vintage </span><span class="secondary-color">Car</span></p>
                <p class="text-center h4 fw-bold mb-2 mx-1 mx-md-4 mt-4 mb-md-5 text-colored text-modified">Nouveau Modéle</p>
                <div class="form-horizontal mx-1 mx-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Marque, htmlAttributes: new { @class = "control-label text-modified" })
                        <div class="col-12">
                            @Html.EditorFor(model => model.Marque, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Marque, "", new { @class = "secondary-color text-modified" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Serie, htmlAttributes: new { @class = "control-label text-modified" })
                        <div class="col-12">
                            @Html.EditorFor(model => model.Serie, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Serie, "", new { @class = "secondary-color text-modified" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-12">
                            <button type="submit" class="btn btn-outline-danger text-modified">Ajouter <i class="fas fa-plus"></i> </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10 big-row col-lg-6 col-xl-7 d-flex align-items-center order-2 order-lg-1">
            </div>
        </div>
    </div>
   </div>

    }

    <div>
        <a href="@Url.Action("Modeles", "Admins")" class="btn btn-outline-danger text-modified"> <i class="fas fa-arrow-circle-left"></i> Liste des Modeles </a>
    </div>



