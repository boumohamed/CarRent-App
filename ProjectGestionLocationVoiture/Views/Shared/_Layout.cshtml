
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vintage Car</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Assets/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.1.1/css/all.min.css" integrity="sha512-ioRJH7yXnyX+7fXTQEKPULWkMn3CqMcapK0NNtCN8q//sW7ZeVFcbMJ9RvX99TwDg6P8rAH2IqUSt2TLab4Xmw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

    <nav class="navbar bg navbar-expand-lg navbar-light p-3">
        <div class="container">
            <a></a>
            <a href="@Url.Action("Index", "Home")" class="navbar-brand brand text-light"> Vintage <span class="secondary-color"> Car </span></a>
            
            <button class="navbar-toggler custom-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>

            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Accueil", "Index", "Home", null, new { @class = "nav-link text-modified text-light" })
                    </li>

                    @if ((string)Session["Typeuser"] == "admin")
                    {
                        @Html.Partial("~/Views/Admins/AdminElements.cshtml")
                    }
                    else if ((string)Session["Typeuser"] == "client")
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Nos Voitures", "Voitures", "Clients", null, new { @class = "nav-link text-modified  text-light" })
                        </li>

                        <li class="nav-item">
                            @Html.ActionLink("Mes reservations", "MesReservations", "Clients", null, new { @class = "nav-link text-modified  text-light" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Nos Voitures", "Voitures", "Clients", null, new { @class = "nav-link text-modified  text-light" })
                        </li>
                    }

                </ul>
                <div class="my-2 my-lg-0">
                    <div class="navbar-nav mr-auto">
                        @if (@Session["CurrentUserEmail"] != null)
                        {
                            <a href="@Url.Action("Voitures", "Clients")" class="nav-link text-modified  text-light">
                                @if ((string)Session["Typeuser"] == "admin")
                                {<i class="fas fa-user-cog"></i> }
                                else
                                { <i class="fas fa-user"></i>}
                                <span class="text-modified">@Session["CurrentUserEmail"]</span>
                            </a>
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("LogOut", "Auth")" class="btn btn-outline-light text-modified "> <i class="fas fa-sign-out-alt"></i> Se Déconnecter </a>
                            </div>
                        }
                        else
                        {
                            @Html.Partial("~/Views/Auth/ConnectionElements.cshtml")
                        }
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container body-content py-2">
        @RenderBody()
    </div>
    @RenderSection("Footer", false)


    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/popper.js"></script>
</body>
</html>

<style>

    

    .big-row {
        background-image: url("../../Assets/App/backImage.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }
    .box {
        box-shadow: rgba(0, 0, 0, 0.25) 0px 25px 50px -12px;
    }

    .text-modified {
        font-family: Times, Times New Roman, serif;
    }
    .text-colored {
        color: #072227;
    }

    .brand {
        font-family: Brush Script MT, Brush Script Std, cursive;
        font-size: 25px;
    }

    .title {
        font-family: Brush Script MT, Brush Script Std, cursive;
        font-size: 50px;
    }

    .card-view {
        background: #ffffff;
        box-shadow: 0px 6px 18px rgba(0, 0, 0, 0.1);
        max-width: 300px;
        margin-top: 1em;
        border-radius: 15px;
    }

        .card-view:hover {
            -webkit-transform: scale(1.03);
            transform: scale(1.03);
            box-shadow: 0px 10px 25px #072227;
        }

        .card-view:hover .Animated-title {
            padding-inline: 20px;
            color: rgb(154, 208, 23);
            font-size: 22px;
        }

    .img {
        max-height: 160px;
    }
    .img-detail {
        max-height: 300px;
    }
    .carousel-img {
        max-height: 340px;
    }


    .card-view, .btn-outline-danger, .Animated-title, .circle-tile {
        -webkit-transition: 300ms;
        transition: 300ms;
    }
    .bg {
        background-color: #072227;
    }

    .btn-outline-danger {
        border-color: #072227;
        color: #072227;
    }

        .btn-outline-danger:hover {
            border-color: rgb(154, 208, 23);
            background-color: rgb(154, 208, 23);

            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
        }
        .btn-outline-danger:focus {
            border-color: rgb(154, 208, 23);
            box-shadow: 0 6px 6px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
            color: white;

            background-color: rgb(154, 208, 23);
        }

        .btn-outline-danger:active {
            border-color: rgb(154, 208, 23);
            box-shadow: 0 6px 6px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
            color: white;
            background-color: rgb(154, 208, 23);
        }
    .btn-outline-light:hover {
        border-color: rgb(154, 208, 23);
        background-color: rgb(154, 208, 23);
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);

    }
    .btn-outline-light {
        border: none;
        font-size: 15px
    }
    .disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .custom-toggler .navbar-toggler-icon {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgb(154, 208, 23)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 8h24M4 16h24M4 24h24'/%3E%3C/svg%3E");
    }

    .custom-toggler.navbar-toggler {
        border-color: rgb(154, 208, 23);
    }
    .primary-color {
        color: #072227;
    }
    .secondary-color {
        color: rgb(154, 208, 23);
    }
    /*
    .hero-text {
        text-align: center;
        position: absolute;
        top: 20%;
        left: 30%;
        transform: translate(-50%, -50%);
        color: white;
    }
   */



    .card1 {
        width: 260px;
        border: none;
        border-radius: 10px;
        background: #072227;
    }

    p.top {
        font-size: 20px
    }

    .discount {
        background-color: rgb(154, 208, 23);
        border: none;
        color: #072227;
        border-top-left-radius: 25px;
        border-bottom-left-radius: 25px;
        padding: 5px 15px;
        transform: translateX(24px);
        height: 35px
    }

        .discount span {
            font-size: 15px
        }

    h2 {
        letter-spacing: 2px
    }


    .card-content p {
        line-height: 18px;
        font-size: 11px;
    }

    .btn-primary {
        border: none;
        border-radius: 6px;
        background-color: rgb(154, 208, 23);
        color: #072227;
        padding-top: 0;
        height: 46px
    }

        .btn-primary span {
            font-size: 13px;
            color: #072227;
            margin-right: 10px
        }

    .fa-arrow-left {
        font-size: 12px;
        color: #072227;
    }

    .btn-primary:hover,
    .btn-primary:focus {
        background-color: #647EDF;
        box-shadow: none
    }








</style>
